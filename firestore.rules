
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users to read stories, regardless of status.
    // This is more permissive for debugging.
    match /stories/{storyId} {
      allow read: if request.auth != null;
      // Disallow all client-side writes to stories. Only the backend can write.
      allow write: if false;
    }

    // Users can only read and write their own profile data
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow backend to log generation failures.
    // In a real production app, this would be locked down further.
    match /generation_failures/{docId} {
        allow write: if false; // Block client-side writes
    }
  }
}
