
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads/writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read and write their own profile
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // For stories, allow anyone to read published stories.
    // Writing stories should be handled by server-side logic with admin privileges.
    match /stories/{storyId} {
      allow read: if resource.data.status == 'published';
      // More restrictive write rule for security
      allow write: if false; 
    }
  }
}
