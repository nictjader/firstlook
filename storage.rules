rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // === STORY COVER IMAGES ===
    match /story-covers/{allPaths=**} {
      // Only authenticated users can read story covers
      allow read: if request.auth != null;
      
      // Only server (Admin SDK) can write
      allow write: if false;
    }
    
    // === USER PROFILE IMAGES ===
    match /user-profiles/{userId} {
      // Users can manage their own profile image
      allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
      
      // Others can read if authenticated
      allow read: if request.auth != null;
    }
    
    // === PUBLIC ASSETS ===
    match /public/{allPaths=**} {
      allow read: if true; // Public assets like logos
      allow write: if false;
    }
    
    // === DEFAULT DENY ===
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}